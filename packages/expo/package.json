{
  "name": "@uploadthing/expo",
  "version": "6.3.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint src --max-warnings 0",
    "build": "bunchee --tsconfig tsconfig.build.json",
    "clean": "git clean -xdf dist node_modules",
    "dev": "wait-on ../react/native/index.d.ts && bunchee -w --tsconfig tsconfig.build.json --no-clean",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@uploadthing/react": "^6.4.4",
    "@uploadthing/shared": "^6.6.0"
  },
  "devDependencies": {
    "@types/react": "18.2.78",
    "@uploadthing/eslint-config": "0.2.0",
    "@uploadthing/tsconfig": "0.1.0",
    "bunchee": "^5.1.2",
    "eslint": "^8.57.0",
    "expo-constants": "^15.4.5",
    "expo-document-picker": "^11.10.1",
    "expo-image-picker": "^14.7.1",
    "react": "18.2.0",
    "react-native": "^0.73.6",
    "typescript": "^5.4.5",
    "uploadthing": "6.9.0",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "expo-constants": "^15.4.5",
    "expo-document-picker": "^11.0.0",
    "expo-image-picker": "^14.0.0",
    "uploadthing": "^6.9.0"
  },
  "peerDependenciesMeta": {
    "@uploadthing/mime-types": {
      "optional": true
    }
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            "@uploadthing/expo",
            "@uploadthing/expo/*"
          ]
        }
      ]
    },
    "extends": [
      "@uploadthing/eslint-config/base"
    ]
  }
}
